<section class="space-y-6">
  <h1 class="text-2xl font-semibold"><%= title %></h1>

  <div class="grid md:grid-cols-2 gap-4">
    <div class="card">
      <h3 class="card-title">Ergebnis</h3>
      <ul class="text-sm leading-7">
        <li>Products: <strong><%= info.products %></strong></li>
        <li>Items: <strong><%= info.items %></strong></li>
        <li>BOM: <strong><%= info.bom %></strong></li>
        <li>Production: <strong><%= info.production %></strong></li>
        <li>Allocations: <strong><%= info.allocations %></strong></li>
      </ul>
      <% if (committed) { %>
        <p class="mt-3 text-emerald-700 text-sm">Import erfolgreich gespeichert.</p>
      <% } else { %>
        <p class="mt-3 text-stone-700 text-sm">Dies war ein Dry-Run oder es gab Fehler.</p>
      <% } %>
      <div class="mt-4 flex gap-3">
        <a class="btn-secondary" href="/admin/import">Zur√ºck</a>
        <a class="btn-secondary" href="/admin">Admin</a>
      </div>
    </div>

    <div class="card">
      <h3 class="card-title">Fehler</h3>
      <% if (!errors.length) { %>
        <p class="text-sm text-stone-600">Keine Fehler gefunden.</p>
      <% } else { %>
        <ul class="text-sm list-disc pl-5">
          <% errors.forEach(e => { %>
            <li><%= e %></li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  </div>
</section>
