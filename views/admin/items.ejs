<section class="space-y-6">
  <h1 class="text-2xl font-semibold">Artikel & Rezepte</h1>

  <!-- Create -->
  <div class="card">
    <h3 class="card-title">Neuer Artikel / Rezept</h3>
    <form action="/admin/items" method="post" class="grid md:grid-cols-4 gap-3 text-sm">
      <div><label class="label">Code</label><input class="input" name="code" required /></div>
      <div><label class="label">Name</label><input class="input" name="name" required /></div>
      <div><label class="label">Kategorie</label><input class="input" name="category" /></div>
      <div>
        <label class="label">Yield Einheit</label>
        <select class="input" name="yield_unit" required>
          <% units.forEach(u => { %><option value="<%= u.code %>"><%= u.code %></option><% }) %>
        </select>
      </div>
      <div><label class="label">Yield Menge</label><input class="input" name="yield_qty" type="number" step="0.0001" required /></div>
      <div class="md:col-span-3"><label class="label">Notizen</label><input class="input" name="notes" /></div>
      <div class="md:col-span-4"><button class="btn-primary">Anlegen</button></div>
    </form>
  </div>

  <!-- List -->
  <div class="card">
    <h3 class="card-title">Bestehende Artikel</h3>
    <div class="overflow-auto">
      <table class="min-w-full text-sm">
        <thead>
          <tr class="text-left border-b">
            <th class="py-2 pr-3">Code</th>
            <th class="py-2 pr-3">Name</th>
            <th class="py-2 pr-3">Kategorie</th>
            <th class="py-2 pr-3">Yield</th>
            <th class="py-2 pr-3"></th>
          </tr>
        </thead>
        <tbody>
          <% if (!items.length) { %>
            <tr><td class="py-3 text-stone-500" colspan="5">Noch keine Artikel.</td></tr>
          <% } else { items.forEach(it => { %>
            <tr class="border-b last:border-0">
              <td class="py-2 pr-3 font-mono"><%= it.code %></td>
              <td class="py-2 pr-3"><%= it.name %></td>
              <td class="py-2 pr-3"><%= it.category || '' %></td>
              <td class="py-2 pr-3"><%= it.yield_qty %> <%= it.yield_unit %></td>
              <td class="py-2 pr-3">
                <a class="link" href="/admin/items/<%= it.id %>/edit">Rezept Ã¶ffnen</a>
              </td>
            </tr>
          <% }) } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
