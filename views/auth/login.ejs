<% layout('layouts/base') %>

<section class="max-w-md mx-auto mt-10">
  <div class="bg-white shadow-sm rounded-2xl border border-stone-200 p-6">
    <h1 class="text-xl font-semibold mb-1">Anmelden</h1>
    <p class="text-sm text-stone-600 mb-6">Bitte melde dich an, um fortzufahren.</p>

    <form action="/login" method="post" class="space-y-4">
      <div>
        <label class="label" for="email">E-Mail</label>
        <input class="input" id="email" name="email" type="email" required placeholder="you@bunca.de" />
      </div>
      <div>
        <label class="label" for="password">Passwort</label>
        <div class="relative">
          <input class="input pr-10" id="password" name="password" type="password" required />
          <button type="button" id="pw-toggle" class="absolute inset-y-0 right-0 px-3 text-stone-500 hover:text-stone-700">
            üëÅÔ∏è
          </button>
        </div>
      </div>
      <button class="btn-primary w-full" type="submit">Login</button>
    </form>
  </div>
</section>

<script>
  document.getElementById('pw-toggle')?.addEventListener('click', () => {
    const el = document.getElementById('password');
    el.type = el.type === 'password' ? 'text' : 'password';
  });
</script>
