<% layout('layouts/base') %>

<section class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-semibold">Dashboard</h1>
      <p class="text-sm text-stone-600 mt-1"><%= greeting %></p>
    </div>
    <div class="text-sm text-stone-600">
      Heute: <span class="font-medium"><%= todayISO %></span>
    </div>
  </div>

  <div class="grid md:grid-cols-3 gap-4">
    <div class="card">
      <h3 class="card-title">Schnellstart</h3>
      <div class="space-y-2 text-sm">
        <a class="link" href="/production">• Production Plan öffnen</a><br/>
        <a class="link" href="/recipes">• Rezepte durchsuchen</a><br/>
        <a class="link" href="/products">• Rohwaren ansehen</a>
      </div>
    </div>

    <div class="card">
      <h3 class="card-title">Status</h3>
      <p class="text-sm text-stone-600">Produktions- und Kostenmodule werden als nächstes freigeschaltet.</p>
    </div>

    <div class="card">
      <h3 class="card-title">Admin</h3>
      <p class="text-sm"><a class="link" href="/admin">Einstellungen & Benutzer verwalten</a></p>
    </div>
  </div>
</section>
