<section class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-2xl font-semibold">Admin</h1>
    <div class="text-sm text-stone-600">Schnellzugriff</div>
  </div>

  <div class="grid md:grid-cols-3 gap-4">
    <div class="card">
      <h3 class="card-title">Rohwaren</h3>
      <p class="text-sm text-stone-600 mb-3">Produkte/Ingredients mit Preisen & Einheiten.</p>
      <a class="btn-secondary" href="/admin/products">Öffnen</a>
      <p class="text-xs text-stone-500 mt-3">Anzahl: <%= counts.products %></p>
    </div>

    <div class="card">
      <h3 class="card-title">Artikel & Rezepte</h3>
      <p class="text-sm text-stone-600 mb-3">Fertige Artikel, Ausbeute (Yield) & Rezepturen.</p>
      <a class="btn-secondary" href="/admin/items">Öffnen</a>
      <p class="text-xs text-stone-500 mt-3">Artikel: <%= counts.items %>, Zutatenzeilen: <%= counts.bom %></p>
    </div>

    <div class="card">
      <h3 class="card-title">Nächste Schritte</h3>
      <p class="text-sm text-stone-600">Production Plan & Import folgen im nächsten Schritt.</p>
    </div>
  </div>
</section>
